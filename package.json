{
  "name": "abai-desktop",
  "version": "1.1.0",
  "description": "A-B/AI Desktop - Compare AI models side-by-side with cost analysis",
  "author": "skylordafk",
  "private": true,
  "main": "apps/main/dist/main.js",
  "packageManager": "pnpm@8.15.8",
  "workspaces": [
    "apps/main",
    "apps/ui"
  ],
  "dependencies": {
    "@ai-sdk/xai": "^1.2.16",
    "@anthropic-ai/sdk": "^0.53.0",
    "@dqbd/tiktoken": "^1.0.21",
    "@google/genai": "^1.4.0",
    "@stripe/stripe-js": "^7.3.1",
    "ai": "^4.3.16",
    "axios": "^1.9.0",
    "electron-store": "8.1.0",
    "openai": "^5.1.1",
    "stripe": "^18.2.1",
    "uuid": "^11.1.0"
  },
  "scripts": {
    "dev": "concurrently -k -n UI,MAIN,LICENSE \"pnpm --filter ./apps/ui dev\" \"cross-env VITE_DEV_SERVER_URL=http://localhost:5174 pnpm --filter ./apps/main dev\" \"pnpm run license-server\"",
    "license-server": "tsx scripts/licence-server.ts",
    "build": "pnpm -r run build",
    "start:prod": "pnpm --filter ./apps/main exec electron .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:license": "node tests/license-e2e.test.js",
    "test:webhooks": "node test-stripe-webhooks.js",
    "test:production": "node test-production-integration.js",
    "test:packaged": "node test-packaged-app.js",
    "test:all": "npm run test && npm run test:license && npm run test:webhooks && npm run test:production",
    "lint": "eslint \"**/*.{ts,tsx,js,jsx}\"",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "prepare": "husky",
    "docs": "start docs/first-model.md || open docs/first-model.md || xdg-open docs/first-model.md",
    "package": "pnpm build && electron-builder --publish never",
    "package:win": "pnpm build && electron-builder --win --x64 --publish never",
    "package:win:npm": "pnpm build && cd apps/main && npm install --production --force && cd ../.. && electron-builder --win --x64 --publish never",
    "package:mac": "pnpm build && electron-builder --mac --arm64 --x64 --publish never"
  },
  "devDependencies": {
    "@playwright/test": "^1.43.1",
    "@types/node": "^22.10.6",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitest/ui": "^3.2.2",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "dotenv": "^16.5.0",
    "electron": "^34.0.0",
    "electron-builder": "^26.0.12",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "fastify": "^5.3.3",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "tsx": "^4.19.2",
    "typescript": "^5.4.5",
    "vitest": "^3.2.2"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "build": {
    "appId": "ai.ab.desktop",
    "productName": "A-B/AI",
    "copyright": "Copyright Â© 2024 skylordafk",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "apps/main/dist/**/*",
      "apps/ui/dist/**/*",
      "apps/main/package.json",
      "node_modules/**/*",
      "package.json",
      "!apps/*/node_modules/**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}",
      "!**/node_modules/electron/**/*",
      "!**/node_modules/electron-builder/**/*",
      "!**/node_modules/@typescript-eslint/**/*",
      "!**/node_modules/eslint*/**/*",
      "!**/node_modules/prettier/**/*",
      "!**/node_modules/husky/**/*",
      "!**/node_modules/lint-staged/**/*",
      "!**/node_modules/vitest/**/*",
      "!**/node_modules/@vitest/**/*",
      "!**/node_modules/concurrently/**/*",
      "!**/node_modules/cross-env/**/*",
      "!**/node_modules/**/*.map",
      "!**/node_modules/**/*.ts",
      "!**/node_modules/**/*.tsx",
      "!**/node_modules/**/*.md",
      "!**/node_modules/**/LICENSE*",
      "!**/node_modules/**/license*",
      "!**/node_modules/**/.github",
      "!**/node_modules/**/docs/**/*",
      "!**/node_modules/**/test/**/*",
      "!**/node_modules/**/tests/**/*",
      "!**/node_modules/**/__tests__/**/*",
      "!**/node_modules/**/coverage/**/*",
      "!**/node_modules/**/.eslintrc*",
      "!**/node_modules/**/.prettier*",
      "!**/node_modules/**/tsconfig.json",
      "!**/node_modules/**/webpack.config.*",
      "!**/node_modules/**/rollup.config.*"
    ],
    "npmRebuild": false,
    "nodeGypRebuild": false,
    "asar": true,
    "compression": "normal",
    "asarUnpack": [
      "node_modules/electron-store/**/*",
      "node_modules/@dqbd/tiktoken/**/*",
      "**/*.node"
    ],
    "forceCodeSigning": false,
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}-${version}-Setup.${ext}",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "${productName}-${version}-Setup.${ext}",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "extraMetadata": {
      "version": "1.1.0",
      "main": "apps/main/dist/main.js"
    }
  }
}
