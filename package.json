{
  "name": "abai-desktop",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@8.15.8",
  "workspaces": [
    "apps/main",
    "apps/ui"
  ],
  "scripts": {
    "dev": "concurrently -k -n UI,MAIN \"pnpm --filter ./apps/ui dev\" \"cross-env VITE_DEV_SERVER_URL=http://localhost:5173 pnpm --filter ./apps/main dev\"",
    "build": "pnpm -r run build",
    "start:prod": "pnpm --filter ./apps/main exec electron .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint \"**/*.{ts,tsx,js,jsx}\"",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "prepare": "husky",
    "docs": "start docs/first-model.md || open docs/first-model.md || xdg-open docs/first-model.md",
    "package": "electron-builder --publish never",
    "package:win": "electron-builder --win --x64 --publish never",
    "package:mac": "electron-builder --mac --arm64 --x64 --publish never"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitest/ui": "^3.2.2",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "dotenv": "^16.5.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "vitest": "^3.2.2"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "build": {
    "appId": "ai.ab.desktop",
    "productName": "A-B/AI",
    "files": [
      "apps/main/dist/**/*",
      "apps/ui/dist/**/*",
      "apps/main/package.json",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "output": "dist"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        "zip"
      ],
      "artifactName": "${productName}-${version}-Setup.${ext}"
    },
    "extraMetadata": {
      "version": "1.0.0",
      "main": "apps/main/dist/main.js"
    }
  }
}
