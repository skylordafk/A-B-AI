{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "Bundler",
    "types": ["vitest/globals"],
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/*"],
      "@main/*": ["apps/main/src/*"],
      "@ui/*": ["apps/ui/src/*"]
    },
    "incremental": true,
    "tsBuildInfoFile": "./.tsbuildinfo",
    "allowJs": true
  },
  "include": [
    "apps/main/src/**/*.ts",
    "apps/ui/src/**/*.ts",
    "tests/**/*.ts",
    "apps/**/*.ts",
    "apps/**/*.d.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
